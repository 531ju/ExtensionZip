<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="TopRoundBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rect_top_round_16_white</item>
    </style>

    <style name="TopRoundBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/TopRoundBottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="behavior_draggable">false</item>
    </style>

    <style name="TopRoundBottomSheetDialogTheme" parent="TopRoundBottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CircularProgressPrimary" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/purple_200</item>
    </style>
</resources>